{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalDependencies": [
    ".env*",
    "!.env.example",
    "!.env.compose",
    "!README.md",
    "!LICENSE",
    "!docs",
    "!.vscode",
    "!.husky",
    "!.github"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**"]
    },
    "lint": {},
    "test": {
      "dependsOn": ["^test"],
      "outputs": ["coverage/**"]
    },
    "format": {
      "cache": false
    }
  }
}
